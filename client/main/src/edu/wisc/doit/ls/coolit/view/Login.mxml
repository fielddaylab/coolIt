<?xml version="1.0" encoding="utf-8"?>
<view:LoginView xmlns:view="edu.wisc.doit.ls.coolit.view.*" xmlns:mx="http://www.adobe.com/2006/mxml"
	xmlns:flash="flash.filters.*"
	horizontalAlign="center" verticalAlign="middle">
	
	<mx:Image id="splashLogo" source="{AssetEmbedLocator.splashLogo}" />
	
	<mx:Panel id="loginBox" layout="horizontal">
		<mx:Canvas id="loginHolder">
			<!-- <mx:Label text="Account ID:" />
			<mx:TextInput id="accountId" /> -->
			<mx:Label text="Services initializing..." fontSize="12" verticalCenter="0" horizontalCenter="0"
						visible="{(model.servicesOut &gt; 0) ? true : false}"/>
			<mx:Button id="login" label="Start" verticalCenter="0" horizontalCenter="0" styleName="jumboButton"
						visible="{(model.servicesOut &gt; 0) ? false : true}"/>
		</mx:Canvas>
		
		<mx:HBox id="introHolder" visible="false" height="0" width="0">
			<mx:Text text="{AssetEmbedLocator.greekText1}" width="100%" height="100%" fontSize="13" textAlign="left" />
			<mx:Image source="{AssetEmbedLocator.genDude}" />
		</mx:HBox>
	</mx:Panel>
	<mx:HBox width="{loginBox.width}" paddingTop="5">
		<mx:Spacer width="100%" />
		<mx:Button id="continueGame" label="Continue" visible="false" />
	</mx:HBox>
	
</view:LoginView>