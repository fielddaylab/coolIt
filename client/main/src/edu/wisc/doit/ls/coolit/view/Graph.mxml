<?xml version="1.0" encoding="utf-8"?>
<view:GraphView xmlns:view="edu.wisc.doit.ls.coolit.view.*" xmlns:mx="http://www.adobe.com/2006/mxml"
	xmlns:flash="flash.filters.*"
	styleName="noPadding" verticalGap="0" horizontalGap="0">
	
	<mx:NumberFormatter id="decFormatter" precision="2" 
        decimalSeparatorFrom="."
        decimalSeparatorTo="." useNegativeSign="true" 
        useThousandsSeparator="true"/>
	
	<!-- y axis and graph -->
	<mx:HBox width="100%" height="100%" styleName="noPadding">
	
		<mx:HBox id="yAxis" height="100%" verticalAlign="middle">
			<mx:Image source="{yGraphic}" />
			
			<mx:VBox id="yValues" height="100%" fontSize="8">
				<mx:Label id="yLabel1" text="1" textAlign="right"/>
				<mx:Spacer height="100%" />
				<mx:Label id="yLabel2" text="2" textAlign="right"/>
				<mx:Spacer height="100%" />
				<mx:Label id="yLabel3" text="3" textAlign="right"/>
			</mx:VBox>
		</mx:HBox>
		
		<mx:Canvas id="spriteCanvas" width="100%" height="100%" borderStyle="0.5" borderColor="0xCCCCCC" />
		
		<mx:Spacer width="5" />
	</mx:HBox>
	<!-- x axis -->
	<mx:HBox id="xAxis" width="100%" verticalAlign="middle">
		<mx:Spacer width="{yAxis.width}" />
		<mx:VBox width="100%" height="100%" verticalGap="0" 
				styleName="noPadding" horizontalAlign="center">
		
			<mx:HBox id="xValues" width="100%" fontSize="8">
				<mx:Label id="xLabel1" text="1" />
				<mx:Spacer width="100%" />
				<mx:Label id="xLabel2" text="2" textAlign="center"/>
				<mx:Spacer width="100%" />
				<mx:Label id="xLabel3" text="3" />
			</mx:HBox>
			
			<mx:Image source="{xGraphic}" />
		</mx:VBox>
		
	</mx:HBox>
	
</view:GraphView>