<?xml version="1.0" encoding="utf-8"?>
<view:JobChooserView xmlns:view="edu.wisc.doit.ls.coolit.view.*" xmlns:mx="http://www.adobe.com/2006/mxml"
	xmlns:flash="flash.filters.*"
	horizontalAlign="center" verticalAlign="middle">
	
	<mx:Panel id="jobPanel" title="JOBS" width="100%" height="100%">
		<mx:HBox styleName="blueBox" width="100%" height="150">
			<mx:filters>
				<flash:DropShadowFilter distance="0" angle="266" blurX='15' blurY='12' alpha="0.5" />
			</mx:filters>
			<mx:Image id="jobImage" source="{model.jobModel.selected.getImageAt(0)}" width="130" height="130"
						verticalAlign="middle" horizontalAlign="center" />
			<mx:VBox width="100%" height="100%">
				<mx:Label styleName="h1" text="{model.jobModel.selected.name}" />
				<mx:TextArea id="jobDescription" width="100%" height="100%" 
					styleName="invisibleTextAreaBorders" editable="false" text="{model.jobModel.selected.description}" />
			</mx:VBox>
			
		</mx:HBox>
		
		<mx:List id="jobList" dataProvider="{model.jobModel.jobs}" width="100%" height="100%" selectedItem="{model.jobModel.selected}">
			<mx:filters>
				<flash:DropShadowFilter distance="0" angle="266" blurX='15' blurY='12' alpha="0.25" />
			</mx:filters>
		</mx:List>
		
		<mx:HBox width="100%" styleName="noPadding">
			<mx:Spacer width="100%" />
			<mx:Button id="startJob" label="Start Job" />
		</mx:HBox>
		
	</mx:Panel>
	
</view:JobChooserView>