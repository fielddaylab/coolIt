<?xml version="1.0" encoding="utf-8"?>
<view:StrutPickerView xmlns:view="edu.wisc.doit.ls.coolit.view.*" xmlns:mx="http://www.adobe.com/2006/mxml"
	xmlns:flash="flash.filters.*"
	horizontalAlign="center" verticalAlign="top">
	
	<mx:ComboBox id="strutList" dataProvider="{model}" width="200" />
	<mx:Spacer height="5" />
	
	<mx:HBox width="100%" styleName="noPadding">
		<mx:Label text="Length (M):" fontWeight="bold" />
		<mx:Label text="{lengthM.value}" />
	</mx:HBox>
	<mx:HSlider id="lengthM" minimum="0.01" maximum="0.89" value="0.89" width="100%"
            allowTrackClick="true" 
			snapInterval="0.01"
            liveDragging="true"/>
	
	<mx:HBox width="100%" styleName="noPadding">
		<mx:Label text="Cross Section (M**2):" fontWeight="bold" />
		<mx:Label id="crossSectionDisplay" text="{crossSection.value.toString()}"/>
	</mx:HBox>
	<mx:HSlider id="crossSection" minimum="0.001" maximum="0.1" value="0.1" width="100%"
			dataTipPrecision="3"
            allowTrackClick="true" 
			snapInterval="0.001"
            liveDragging="true"
			mouseMove="{crossSectionDisplay.text = crossSection.value.toString()}"
			mouseUp="{crossSectionDisplay.text = crossSection.value.toString()}" />
	
	<mx:Form fontSize="10" width="100%">
		<mx:FormItem fontWeight="bold" label="Stress Limit (MN):">
			<mx:Label id="stressLimit" fontWeight="none" text="--"/>
		</mx:FormItem>
		
		<mx:FormItem fontWeight="bold" label="Price ($):">
			<mx:Label id="priceField" fontWeight="none" text="--"/>
		</mx:FormItem>
		
		<mx:FormItem fontWeight="bold" label="Cost/M**3 ($):">
			<mx:Label id="cost" fontWeight="none" text="--"/>
		</mx:FormItem>
		
		<mx:FormItem fontWeight="bold" label="Yield Strength (MPa):">
			<mx:Label id="yieldStrength" fontWeight="none" text="--"/>
		</mx:FormItem>
	</mx:Form>
	
