<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2">
	<class name="Persistence.P_ProblemState, Persistence" table="ProblemStates">
		<id name="Id" column="id" type="integer">
			<generator class="identity" />
		</id>
		<property name="Timestamp" column="timestamp" type="DateTime" />
		<property name="PowerFactor" column="powerFactor" />
		<property name="Cost" column="cost" />
		<property name="Temperature" column="temperature" />
		<property name="IsValidSolution" column="isValidSolution" />
		<many-to-one
				  name="Episode"
				  column="episodeId"
				  class="Persistence.P_Episode, Persistence"
				  not-null="true"
				  cascade="all"
		/>
    <set name="StrutStates" inverse="true" cascade="all">
      <key column="problemId"/>
      <one-to-many class="Persistence.P_StrutState, Persistence"/>
    </set>
    <set name="CoolerStates" inverse="true" cascade="all">
      <key column="problemId"/>
      <one-to-many class="Persistence.P_CoolerState, Persistence"/>
    </set>
	</class>
</hibernate-mapping>
